<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="sl_attendance_import_tree_view" model="ir.ui.view">
        <field name="name">sl.attendance.import.tree</field>
        <field name="model">sl.attendance.import</field>
        <field name="arch" type="xml">
            <list string="打卡資料匯入">
                <field name="csv_filename"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="imported_count"/>
                <field name="skipped_count"/>
                <field name="filtered_count"/>
                <field name="error_count"/>
                <field name="import_datetime"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="sl_attendance_import_form_view" model="ir.ui.view">
        <field name="name">sl.attendance.import.form</field>
        <field name="model">sl.attendance.import</field>
        <field name="arch" type="xml">
            <form string="打卡資料匯入">
                <header>
                    <button name="action_import_attendance" string="匯入打卡資料" type="object" 
                            class="oe_highlight"
                            confirm="⚠️ 警告：此操作將會覆蓋所選日期範圍內的所有原始打卡資料和出勤紀錄！&#10;&#10;確定要繼續執行嗎？"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="csv_file" filename="csv_filename"/>
                            <field name="csv_filename" invisible="1"/>
                            <field name="import_datetime" readonly="1"/>
                        </group>
                        <group>
                            <field name="imported_count" readonly="1"/>
                            <field name="skipped_count" readonly="1"/>
                            <field name="filtered_count" readonly="1"/>
                            <field name="error_count" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="匯入結果" name="result">
                            <field name="result_message" placeholder="匯入結果將顯示在此..." readonly="1"/>
                        </page>
                        <page string="格式說明" name="help">
                            <div class="alert alert-info" role="alert">
                                <h4>檔案格式說明：</h4>
                                <p><strong>支援的檔案格式：</strong></p>
                                <ul>
                                    <li><code>CSV</code>：純文字檔案（建議使用 UTF-8 編碼）</li>
                                    <li><code>Excel</code>：xlsx 或 xls 格式</li>
                                </ul>
                                <p><strong>必要欄位：</strong></p>
                                <ul>
                                    <li><code>serial_number</code>：工號（對應員工的工號 employee_number、條碼 barcode 或 PIN 碼）</li>
                                    <li><code>check_time</code>：打卡時間</li>
                                </ul>
                                <p><strong>時間格式範例：</strong></p>
                                <ul>
                                    <li>完整格式：2025-10-21 08:30:00 或 2025/10/21 08:30:00</li>
                                    <li>簡短格式：2025-10-21 08:30 或 2025/10/21 08:30</li>
                                    <li>無分隔格式：20251021 08:30:00 或 20251021 08:30</li>
                                    <li>Excel 日期時間格式會自動轉換</li>
                                </ul>
                                <p><strong>CSV範例：</strong></p>
                                <pre>serial_number,check_time
001,2025-10-21 08:30:00
002,2025-10-21 08:25:00
003,2025-10-21 17:30:00</pre>
                                <p><strong>Excel範例：</strong></p>
                                <table class="table table-sm table-bordered" style="max-width: 400px;">
                                    <thead>
                                        <tr>
                                            <th>serial_number</th>
                                            <th>check_time</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>001</td>
                                            <td>2025-10-21 08:30:00</td>
                                        </tr>
                                        <tr>
                                            <td>002</td>
                                            <td>2025-10-21 08:25:00</td>
                                        </tr>
                                        <tr>
                                            <td>003</td>
                                            <td>2025-10-21 17:30:00</td>
                                        </tr>
                                    </tbody>
                                </table>
                                <p class="text-info"><strong>說明：</strong></p>
                                <ul>
                                    <li>系統會自動忽略已存在的相同打卡記錄</li>
                                    <li>只會匯入在指定日期範圍內的打卡資料</li>
                                    <li>範圍外的資料會被過濾不會匯入</li>
                                    <li>每筆打卡記錄都會建立到 hr.attendance 模組中</li>
                                    <li>打卡時間會作為 check_in 欄位儲存</li>
                                </ul>
                            </div>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="sl_attendance_import_search_view" model="ir.ui.view">
        <field name="name">sl.attendance.import.search</field>
        <field name="model">sl.attendance.import</field>
        <field name="arch" type="xml">
            <search string="打卡資料匯入">
                <field name="csv_filename"/>
                <field name="import_datetime"/>
                <field name="create_date"/>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="sl_attendance_import_action" model="ir.actions.act_window">
        <field name="name">打卡資料匯入</field>
        <field name="res_model">sl.attendance.import</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                建立新的打卡資料匯入
            </p>
            <p>
                上傳 CSV 或 Excel 檔案來匯入打卡記錄。<br/>
                系統會自動建立打卡記錄並忽略重複資料。
            </p>
        </field>
    </record>

</odoo>
