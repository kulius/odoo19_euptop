<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="hr_attendance_raw_view_tree" model="ir.ui.view">
        <field name="name">hr.attendance.raw.tree</field>
        <field name="model">hr.attendance.raw</field>
        <field name="arch" type="xml">
            <list string="原始打卡記錄" create="false">
                <field name="employee_number"/>
                <field name="employee_id"/>
                <field name="department_id"/>
                <field name="check_time"/>
                <field name="source"/>
                <field name="note"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="hr_attendance_raw_view_form" model="ir.ui.view">
        <field name="name">hr.attendance.raw.form</field>
        <field name="model">hr.attendance.raw</field>
        <field name="arch" type="xml">
            <form string="原始打卡記錄" create="false" delete="false">
                <sheet>
                    <group>
                        <group>
                            <field name="employee_id" readonly="1"/>
                            <field name="employee_number" readonly="1"/>
                            <field name="department_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="check_time" readonly="1"/>
                            <field name="source" readonly="1"/>
                            <field name="note"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="hr_attendance_raw_action" model="ir.actions.act_window">
        <field name="name">原始打卡記錄</field>
        <field name="res_model">hr.attendance.raw</field>
        <field name="view_mode">list,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_empty_folder">
                目前沒有原始打卡記錄
            </p>
            <p>
                這裡記錄所有員工的原始打卡資料，包含從打卡機、手動匯入等各種來源的打卡時間點。
            </p>
        </field>
    </record>

</odoo>
