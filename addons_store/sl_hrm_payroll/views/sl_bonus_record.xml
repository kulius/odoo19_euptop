<odoo>
    <record id="view_form_sl_bonus_record" model="ir.ui.view">
        <field name="name">sl.bonus.record.form</field>
        <field name="model">sl.bonus.record</field>
        <field name="arch" type="xml">
            <form string="獎金發放">
                <group col="6">
                    <field name="company_id" invisible="1"/>
                    <field name="salary_rule_id" options="{'no_create': True, 'no_open': True}" widget="selection"/>
                    <field name="employee_id"/>
                    <field name="payroll_allocation_day"/>
                    <field name="actual_pay_day"/>
                    <field name="amount"/>
                </group>
                <group>
                    <field name="note"/>
                </group>
            </form>
        </field>
    </record>

    <record id="view_list_sl_bonus_record" model="ir.ui.view">
        <field name="name">sl.bonus.record.list</field>
        <field name="model">sl.bonus.record</field>
        <field name="arch" type="xml">
            <list editable="bottom" string="獎金發放紀錄">
                <field name="salary_rule_id"/>
                <field name="employee_id"/>
                <field name="payroll_allocation_day"/>
                <field name="actual_pay_day"/>
                <field name="amount"/>
                <field name="company_id"/>
            </list>
        </field>
    </record>

    <record id="action_sl_bonus_record" model="ir.actions.act_window">
        <field name="name">獎金發放紀錄</field>
        <field name="res_model">sl.bonus.record</field>
        <field name="view_mode">list</field>
    </record>
</odoo>