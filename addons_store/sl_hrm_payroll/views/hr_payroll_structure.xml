<odoo>
    <record id="sl_hrm_payroll_structure_view_list" model="ir.ui.view">
        <field name="name">hr.payroll.structure.list</field>
        <field name="model">hr.payroll.structure</field>
        <field name="arch" type="xml">
            <list string="Employee Function">
                <field name="name"/>
                <field name="code"/>
                <field name="rule_ids"/>
                <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
            </list>
        </field>
    </record>

    <record id="sl_hrm_payroll_structure_view_kanban" model="ir.ui.view">
        <field name="name">hr.payroll.structure.kanban</field>
        <field name="model">hr.payroll.structure</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_content oe_kanban_global_click">
                            <div class="row">
                                <div class="col-12">
                                    <strong><field name="name"/></strong>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <span>Code: <field name="code"/></span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="hr_payroll_structure_view_form" model="ir.ui.view">
        <field name="name">hr.payroll.structure.form</field>
        <field name="model">hr.payroll.structure</field>
        <field name="arch" type="xml">
            <form string="Employee Function">
                <group col="4">
                    <field name="name" />
                    <field name="code" />
                    <field
                        name="company_id"
                        groups="base.group_multi_company"
                        options="{'no_create': True}"
                    />
                </group>
                <notebook colspan="4">
                    <page string="薪資結構">
                        <field name="rule_ids" domain="[('parent_rule_id','=',False)]">
                            <list>
                                <field name="sequence" widget="handle"/>
                                <field name="sequence"/>
                                <field name="name" />
                                <field name="category_id" />
                                <field name="is_basic"/>
                                <field name="is_non_recurring"/>
                                <field name="computed_amount_label"/>
                                <field name="code" />
                            </list>
                        </field>
                    </page>
                    <page string="自動重新計算項目">
                        <field name="auto_recompute_rule_ids" domain="[('id', 'in', rule_ids)]">
                            <list>
                                <field name="sequence"/>
                                <field name="name"/>
                                <field name="category_id" />
                                <field name="computed_amount_label"/>
                                <field name="code"/>
                            </list>
                        </field>
                    </page>
                </notebook>
            </form>
        </field>
    </record>

    <record id="hr_payroll_structure_action" model="ir.actions.act_window">
        <field name="name">薪資結構設定</field>
        <field name="res_model">hr.payroll.structure</field>
        <field name="binding_view_types">form</field>
        <field name="view_mode">list,kanban,form</field>
    </record>
</odoo>