<odoo>
  <record id="view_payslip_sheet_report_wizard" model="ir.ui.view">
    <field name="name">payslip.sheet.wizard.form</field>
    <field name="model">payslip.sheet.report.wizard</field>
    <field name="arch" type="xml">
      <form string="薪資報表查詢">
        <group>
          <group>
            <field name="sheet_id" widget="many2one"
            options="{'no_create': True}" domain="[('is_salary_sheet', '=', True)]"/>
          </group>
          <group>
            <field name="blank" invisible="1"/>
          </group>
        </group>
        <footer>
          <button name="view_report" string="薪資明細報表" type="object" class="btn-primary" />
          <button name="view_pivot_report" string="薪資明細分析表" type="object" class="btn-primary" />
          <!-- <button name="view_pay_report" string="匯款報表" type="object" class="btn-primary" />
          <button name="view_cost_report" string="成本報表" type="object" class="btn-primary" /> -->
          <button string="取消" class="btn-secondary" special="cancel" />
        </footer>
      </form>
    </field>
  </record>
  
  <record id="view_payslip_bonus_sheet_report_wizard" model="ir.ui.view">
    <field name="name">payslip.bonus.sheet.wizard.form</field>
    <field name="model">payslip.sheet.report.wizard</field>
    <field name="arch" type="xml">
      <form string="獎金報表查詢">
        <group>
          <group>
            <field name="sheet_id" widget="many2one" string="獎金發放表"
            options="{'no_create': True}" domain="[('is_salary_sheet', '=', False)]"/>
          </group>
          <group>
            <field name="blank" invisible="1"/>
          </group>
        </group>
        <footer>
          <button name="view_bonus_report" string="獎金明細報表" type="object" class="btn-primary" />
          <!-- <button name="view_pay_report" string="匯款報表" type="object" class="btn-primary" />
          <button name="view_cost_report" string="成本報表" type="object" class="btn-primary" /> -->
          <button string="取消" class="btn-secondary" special="cancel" />
        </footer>
      </form>
    </field>
  </record>
</odoo>