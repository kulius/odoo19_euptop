<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Cron Job: 每天早上 9 點發送當月考勤異常通知 -->
        <record id="cron_attendance_anomaly_notification" model="ir.cron">
            <field name="name">考勤異常通知 - 每日檢查</field>
            <field name="model_id" ref="model_hr_attendance_check"/>
            <field name="state">code</field>
            <field name="code">model.cron_send_monthly_attendance_anomaly_notification()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="active" eval="True"/>
            <!-- 設定為每天早上 9:00 執行 (UTC 時間 01:00 = 台北時間 09:00) -->
            <field name="nextcall" eval="(DateTime.now() + timedelta(days=1)).replace(hour=1, minute=0, second=0)"/>
            <field name="priority">5</field>
            <field name="user_id" ref="base.user_admin"/>
        </record>
        
        <!-- Cron Job: 每天凌晨 2 點自動產生前一天的出勤紀錄 -->
        <record id="cron_create_attendance_records" model="ir.cron">
            <field name="name">自動產生每日出勤紀錄</field>
            <field name="model_id" ref="model_hr_attendance_check"/>
            <field name="state">code</field>
            <field name="code">model.job_create_attendance_records()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="active" eval="True"/>
            <!-- 設定為每天凌晨 2:00 執行 (UTC 時間 18:00 前一天 = 台北時間 02:00) -->
            <field name="nextcall" eval="(DateTime.now() + timedelta(days=1)).replace(hour=18, minute=0, second=0)"/>
            <field name="priority">10</field>
            <field name="user_id" ref="base.user_admin"/>
        </record>
    </data>
</odoo>
