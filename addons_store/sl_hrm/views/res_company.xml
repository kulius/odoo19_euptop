<odoo>
    <record id="starrylord_view_res_company_form_inherit" model="ir.ui.view">
        <field name="name">starrylord.res.company.form.inherit</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="before">
                <field name="company_code" string="公司代碼"/>
                <field name="employee_number_prefix" string="員工編號前綴"/>
                <field name="quotation_prefix"/>

            </xpath>
            <xpath expr="//page[@name='branches']" position="after">
                <page string="工務所">
                    <field name="company_site_line_ids">
                        <list editable="bottom">
                            <field name="name"/>
                            <field name="comment"/>
                        </list>
                    </field>
                </page>


            </xpath>
        </field>
    </record>
</odoo>