<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Hour List Views -->
    <record id="starrylord_holiday_hour_list_tree" model="ir.ui.view">
        <field name="name">starrylord.holiday.hour.list.tree</field>
        <field name="model">starrylord.holiday.hour.list</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="hour"/>
                <field name="is_select"/>
            </list>
        </field>
    </record>

    <record id="starrylord_holiday_hour_list_form" model="ir.ui.view">
        <field name="name">starrylord.holiday.hour.list.form</field>
        <field name="model">starrylord.holiday.hour.list</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="hour"/>
                        <field name="is_select"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_starrylord_holiday_hour_list" model="ir.actions.act_window">
        <field name="name">小時列表</field>
        <field name="res_model">starrylord.holiday.hour.list</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Minute List Views -->
    <record id="starrylord_holiday_min_list_tree" model="ir.ui.view">
        <field name="name">starrylord.holiday.min.list.tree</field>
        <field name="model">starrylord.holiday.min.list</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="minute"/>
                <field name="is_select"/>
            </list>
        </field>
    </record>

    <record id="starrylord_holiday_min_list_form" model="ir.ui.view">
        <field name="name">starrylord.holiday.min.list.form</field>
        <field name="model">starrylord.holiday.min.list</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="minute"/>
                        <field name="is_select"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_starrylord_holiday_min_list" model="ir.actions.act_window">
        <field name="name">分鐘列表</field>
        <field name="res_model">starrylord.holiday.min.list</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
