<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- 客戶訪談單據序號 -->
        <!-- 格式: CV_YYMMDD### (例如: CV_231121001) -->
        <record id="seq_customer_visit" model="ir.sequence">
            <field name="name">客戶訪談單據序號</field>
            <field name="code">customer.visit</field>
            <field name="prefix">CV_%(y)s%(month)s%(day)s</field>
            <field name="padding">3</field>
            <field name="number_increment">1</field>
            <field name="number_next">1</field>
            <field name="use_date_range">True</field>
        </record>

    </data>
</odoo>
