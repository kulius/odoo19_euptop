<odoo>
    <record id="hr_schedule_time_type_tree_view" model="ir.ui.view">
        <field name="name">hr.schedule.time.type.tree</field>
        <field name="model">hr.schedule.time.type</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="note"/>
                <field name="date_type"/>
                <field name="work_start" widget="float_time"/>
                <field name="work_end" widget="float_time"/>
                <field name="am_start" widget="float_time"/>
                <field name="am_end" widget="float_time"/>
                <field name="pm_start" widget="float_time"/>
                <field name="pm_end" widget="float_time"/>
            </list>
        </field>
    </record>

    <record id="hr_schedule_time_type_form_view" model="ir.ui.view">
        <field name="name">hr.schedule.time.type.form</field>
        <field name="model">hr.schedule.time.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="work_start" widget="float_time"/>
                        <field name="work_end" widget="float_time"/>
                        <field name="am_start" widget="float_time"/>
                        <field name="am_end" widget="float_time"/>
                        <field name="pm_start" widget="float_time"/>
                        <field name="pm_end" widget="float_time"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hr_schedule_time_type_action" model="ir.actions.act_window">
        <field name="name">班別時間代號定義</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.schedule.time.type</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
