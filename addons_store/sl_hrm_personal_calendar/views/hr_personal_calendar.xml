<odoo>
    <record id="hr_personal_calendar_tree_view" model="ir.ui.view">
        <field name="name">hr.personal.calendar.tree</field>
        <field name="model">hr.personal.calendar</field>
        <field name="arch" type="xml">
            <list>
                <field name="employee_id"/>
                <field name="department_id"/>
                <field name="date_type"/>
                <field name="start_date"/>
                <field name="end_date"/>
            </list>
        </field>
    </record>

    <record id="hr_personal_calendar_form_view" model="ir.ui.view">
        <field name="name">hr.personal.calendar.form</field>
        <field name="model">hr.personal.calendar</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="employee_id"/>
                            <field name="schedule_id" invisible="1"/>
                            <field name="calendar_date" invisible="1"/>
                        </group>
                        <group>
                            <field name="date_type"/>
                            <field name="time_type_id" invisible="1"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <group>
                                <field name="start_date"/>
                                <field name="end_date"/>
                            </group>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hr_personal_calendar_calendar_view" model="ir.ui.view">
        <field name="name">hr personal calendar calendar</field>
        <field name="model">hr.personal.calendar</field>
        <field name="priority" eval="2"/>
        <field name="arch" type="xml">
            <calendar string="Leads Generation" create="0" mode="month" date_start="start_date" date_stop="end_date"
                      color="date_type" hide_time="true" event_limit="5">
                <field name="employee_id" filters="1"/>
                <field name="date_type" filters="1"/>
                <field name="department_id" filters="1"/>
                <field name="start_date"/>
                <field name="end_date"/>
            </calendar>
        </field>
    </record>

    <record id="hr_personal_calendar_action" model="ir.actions.act_window">
        <field name="name">個人行事曆</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.personal.calendar</field>
        <field name="view_mode">calendar,list</field>
        <field name="domain">[('user_id', '=', uid)]</field>
        <field name="view_ids"
               eval="[(5, 0, 0), (0, 0, {'view_mode': 'calendar', 'view_id': ref('hr_personal_calendar_calendar_view')}),
                          (0, 0, {'view_mode': 'list', 'view_id': ref('hr_personal_calendar_tree_view')}),]"/>
        <field name="context">{'edit': 0,'create': 0}</field>
    </record>

    <record id="hr_personal_calendar_manager_action" model="ir.actions.act_window">
        <field name="name">公司行事曆</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.personal.calendar</field>
        <field name="view_mode">calendar,list</field>
        <field name="view_ids"
               eval="[(5, 0, 0),
                           (0, 0, {'view_mode': 'calendar', 'view_id': ref('hr_personal_calendar_calendar_view')}),
                          (0, 0, {'view_mode': 'list', 'view_id': ref('hr_personal_calendar_tree_view')}),]"/>
        <field name="context">{'search_default_schedule_group': True, 'edit': 0,'create': 0}</field>
    </record>

</odoo>
