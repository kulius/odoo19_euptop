<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_tier_portal_todo_tree" model="ir.ui.view">
        <field name="name">tier.portal.todo.tree</field>
        <field name="model">tier.review</field>
        <field name="arch" type="xml">
            <tree string="待辦簽核" create="0">
                <!--              <button string="開啓表單" type="object" name="action_open_form" class="btn-primary" />-->
                <field name="requested_by" string="發起人"/>
                <field name="reviewer_ids" widget="many2many_tags"/>
                <field name="can_review" invisible="1"/>
                <field name="approve_sequence" invisible="1"/>
                <field name="model"/>
                <field name="res_id"/>
                <field name="definition_id" invisible="1"/>
                <field name="review_type" invisible="1"/>
                <field name="reviewer_id"/>
                <field name="todo_by"/>
                <field name="done_by"/>
            </tree>
        </field>
    </record>


    <record id="view_tier_portal_todo_form" model="ir.ui.view">
        <field name="name">tier.portal.todo.form</field>
        <field name="model">tier.review</field>
        <field name="arch" type="xml">
            <form string="待辦簽核" update="1">
                <sheet>
                    <group>
                        <field name="requested_by" string="發起人"/>
                        <field name="name" readonly="1" string="說明"/>
                        <field name="status" readonly="1" string="狀態"/>
                        <field name="reviewer_id"/>
                        <field name="reviewer_group_id"/>
                        <field name="reviewer_field_id"/>
                        <field name="reviewer_ids" widget="many2many_tags" readonly="0" string="可審批人"/>
                        <field name="can_review"/>
                        <field name="approve_sequence"/>
                        <field name="model"/>
                        <field name="res_id"/>
                        <field name="definition_id"/>
                        <field name="review_type"/>
                    </group>
                    <group>
                        <field name="reviewer_id" invisible="1" readonly="1"/>
                        <field name="todo_by" string="審批人" readonly="1" invisible="1"/>
                        <field name="done_by" string="審核人" readonly="1" invisible="1"/>
                    </group>

                </sheet>

            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_tier_portal_todo_search" model="ir.ui.view">
        <field name="name">view.tier.portal.todo.search</field>
        <field name="model">tier.review</field>
        <field name="arch" type="xml">
            <search string="搜索待辦簽核">
                <field name="requested_by"/>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_tier_portal_todo" model="ir.actions.act_window">
        <field name="name">待辦簽核</field>
        <field name="res_model">tier.review</field>
        <field name="view_mode">tree</field>
        <field name="domain">[('reviewer_ids','in',uid), ('can_sign','=',True)]</field>
        <!--      <field name="domain">[('id','in',user.review_ids.ids),("can_review", "=", True)]</field>-->

        <field name="context">{'search_default_status_pending': 1}</field>
        <field name="view_id" ref="view_tier_portal_todo_tree"/>
        <field name="search_view_id" ref="view_tier_portal_todo_search"/>
    </record>

