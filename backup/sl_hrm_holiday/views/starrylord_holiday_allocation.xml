<odoo>
    <record id="starrylord_holiday_allocation_tree_view" model="ir.ui.view">
        <field name="name">starrylord.holiday.allocation.tree</field>
        <field name="model">starrylord.holiday.allocation</field>
        <field name="arch" type="xml">
            <tree>
                <field name="year"/>
                <field name="holiday_type_id"/>
                <field name="duration_date"/>
                <field name="duration_time"/>
                <field name="duration_min"/>
                <field name="last_time"/>
                <field name="completed_usage"/>
                <field name="validity_start"/>
                <field name="validity_end"/>
                <field name="is_expired"/>
                <field name="note"/>
            </tree>
        </field>
    </record>

    <record id="starrylord_holiday_allocation_form_view" model="ir.ui.view">
        <field name="name">starrylord.holiday.allocation.form</field>
        <field name="model">starrylord.holiday.allocation</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="year"/>
                    </group>
                    <group>
                        <group>
                            <field name="holiday_type_id"/>
                            <field name="time_type"/>
                            <field name="duration_date"/>
                            <field name="duration_time"/>
                            <field name="note"/>
                        </group>
                        <group>
                            <field name="employee_id"/>
                            <field name="validity_start"/>
                            <field name="validity_end"/>
                            <field name="distribute_time"/>
                            <field name="duration_min"/>
                            <field name="duration_min_quarter"/>
                            <field name="completed_usage"/>
							<field name="is_expired"/>
                        </group>

                    </group>
                    <group>
                        <field name="used_record_ids" readonly="1">
                            <tree options="{'no_open': True}">
                                <field name="holiday_apply_id"/>
                                <field name="holiday_day"/>
                                <field name="hours"/>
                            </tree>
                        </field>
                    </group>
                </sheet>


            </form>
        </field>
    </record>
    <record id="starrylord_holiday_allocation_search_view" model="ir.ui.view">
        <field name="name">starrylord.holiday.allocation.search</field>
        <field name="model">starrylord.holiday.allocation</field>
        <field name="arch" type="xml">
            <search>
                <field name="year"/>
                <field name="employee_id"/>
                <field name="holiday_type_id"/>
                <field name="name"/>
                <separator/>
            </search>
        </field>
    </record>

    <record id="starrylord_holiday_allocation_action" model="ir.actions.act_window">
        <field name="name">休假分配</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">starrylord.holiday.allocation</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'group_by' : 'employee_id'}</field>
    </record>

    <!-- 員工個人查看的 Tree View -->
    <record id="starrylord_holiday_allocation_user_tree_view" model="ir.ui.view">
        <field name="name">starrylord.holiday.allocation.user.tree</field>
        <field name="model">starrylord.holiday.allocation</field>
        <field name="priority">20</field>
        <field name="arch" type="xml">
            <tree string="我的休假分配" create="false" edit="false" delete="false">
                <field name="year" string="年度"/>
                <field name="holiday_type_id" string="休假類型"/>
                <field name="validity_start" string="有效起始日"/>
                <field name="validity_end" string="有效結束日"/>
                <field name="duration_date" string="分配天數" sum="總天數"/>
                <field name="duration_time" string="分配小時" sum="總小時"/>
				<field name="duration_min" string="分配分鐘" sum="總分鐘"/>
                <field name="last_time" string="剩餘時數" sum="總剩餘時數"/>
                <field name="completed_usage" string="是否用完"/>
				<field name="is_expired" string="是否過期"/>
                <field name="note" string="備註"/>
            </tree>
        </field>
    </record>

    <!-- 員工個人休假分配 -->
    <record id="starrylord_holiday_allocation_user_action" model="ir.actions.act_window">
        <field name="name">我的休假分配</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">starrylord.holiday.allocation</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="starrylord_holiday_allocation_user_tree_view"/>
        <field name="domain">[('employee_id.user_id', '=', uid)]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                目前沒有休假分配
            </p>
            <p>
                這裡會顯示您的所有休假分配，<br/>
                包含各種假別的可用時數和有效期限。
            </p>
        </field>
    </record>
</odoo>