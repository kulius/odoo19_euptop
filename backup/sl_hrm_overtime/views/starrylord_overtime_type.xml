<odoo>
    <record id="starrylord_overtime_type_tree_view" model="ir.ui.view">
        <field name="name">starrylord.overtime.type.tree</field>
        <field name="model">starrylord.overtime.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="time_type"/>
                <field name="date_type"/>
                <field name="eight_hours"/>
                <field name="rule_ids"/>
            </tree>
        </field>
    </record>

    <record id="starrylord_overtime_type_form_view" model="ir.ui.view">
        <field name="name">starrylord.overtime.type.form</field>
        <field name="model">starrylord.overtime.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" string="類型名稱"/>
                        <field name="time_type"/>
                        <field name="date_type"/>
                        <field name="eight_hours"/>

                    </group>
                    <notebook>
                        <page string="費率規則">
                            <field name="rule_ids">
                                <tree string="加班費規則" editable="bottom">
                                <field name="name"/>
                                <field name="time"/>
                                <field name="rate"/>
                            </tree>
                            </field>
                    </page>
                    </notebook>

                </sheet>
            </form>
        </field>
    </record>

    <record id="starrylord_overtime_type_action" model="ir.actions.act_window">
        <field name="name">加班類型</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">starrylord.overtime.type</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>