    </record>

    <record id="starrylord_overtime_apply_report_action" model="ir.actions.act_window">
        <field name="name">加班申請紀錄分析</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">starrylord.overtime.apply</field>
        <field name="view_mode">pivot</field>
        <field name="view_id" ref="starrylord_overtime_apply_pivot"/>
    </record>


    <!-- 合規性判斷窗口 Wizard Form View -->
    <record id="view_starrylord_overtime_compliance_wizard_form" model="ir.ui.view">
        <field name="name">starrylord.overtime.compliance.wizard.form</field>
        <field name="model">starrylord.overtime.compliance.wizard</field>
        <field name="arch" type="xml">
            <form string="加班合規判斷">
                <sheet>

                    <group>
                        <field name="compliance_state"/>
                        <field name="compliance_reason"
                               invisible="compliance_state != 'ng'"/>
                    </group>

                    <footer>
                        <button name="action_confirm"
                                string="確認"
                                type="object"
                                class="btn-primary"/>
                        <button string="取消"
                                special="cancel"
                                class="btn-secondary"/>
                    </footer>

                </sheet>
            </form>
        </field>
    </record>

	<record id="view_overtime_attendance_adjust_wizard_form" model="ir.ui.view">
		<field name="name">starrylord.overtime.attendance.adjust.wizard.form</field>
		<field name="model">starrylord.overtime.attendance.adjust.wizard</field>
		<field name="arch" type="xml">
			<form string="加班異常處理">
				<sheet>

					<group>
						<field name="adjust_mode"/>
						<field name="attendance_id"
							   invisible="adjust_mode != 'attendance'"/>
						<field name="attendance_ids" invisible="1"/>
					</group>

					<group invisible="adjust_mode == 'manual'">
								<label for="adjust_hour_from"/>
								<div class="o_row o_row_readonly">
									<field name="adjust_hour_from" readonly="1"/>
									<label for="adjust_hour_from" string=" : "/>
									<field name="adjust_min_from" readonly="1"/>
								</div>

								<!-- 調整後結束時間 -->
								<label for="adjust_hour_to"/>
								<div class="o_row o_row_readonly">
									<field name="adjust_hour_to" readonly="1"/>
									<label for="adjust_hour_to" string=" : "/>
									<field name="adjust_min_to" readonly="1"/>
								</div>
						<field name="adjust_duration_time" readonly="1"/>
						<field name="adjust_duration_time" readonly="0" invisible="1"/>
					</group>

					<group invisible="adjust_mode != 'manual'">
								<label for="adjust_hour_from"/>
								<div class="o_row o_row_readonly">
									<field name="adjust_hour_from" readonly="0"/>
									<label for="adjust_hour_from" string=" : "/>
									<field name="adjust_min_from" readonly="0"/>
								</div>

								<!-- 調整後結束時間 -->
								<label for="adjust_hour_to"/>
								<div class="o_row o_row_readonly">
									<field name="adjust_hour_to" readonly="0"/>
									<label for="adjust_hour_to" string=" : "/>
									<field name="adjust_min_to" readonly="0"/>
								</div>
						<field name="adjust_duration_time" readonly="1"/>
						<field name="adjust_duration_time" readonly="0" invisible="1"/>
					</group>

					<group>
						<field name="adjust_memo"/>
					</group>

					<footer>
						<button string="確認"
								type="object"
								name="action_confirm"
								class="btn-primary"/>
						<button string="取消"
								special="cancel"/>
					</footer>

				</sheet>
			</form>
		</field>
	</record>

    <record id="view_overtime_hr_invalid_wizard_form" model="ir.ui.view">
        <field name="name">starrylord.overtime.hr.invalid.wizard.form</field>
        <field name="model">starrylord.overtime.hr.invalid.wizard</field>
        <field name="arch" type="xml">
