                <footer>
                    <button string="確認"
                            type="object"
                            name="action_confirm"
                            class="btn-primary"/>
                    <button string="取消"
                            class="btn-secondary"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="starrylord_hr_attendance_check_manager_view_tree_inherit_overtime"
            model="ir.ui.view">
        <field name="name">hr.attendance.check.tree.inherit.overtime</field>
        <field name="model">hr.attendance.check</field>
        <field name="inherit_id"
               ref="sl_hr_attendance.starrylord_hr_attendance_check_manager_view_tree"/>
        <field name="arch" type="xml">

            <!-- 在 holiday_memo 後面插入加班相關欄位 -->
