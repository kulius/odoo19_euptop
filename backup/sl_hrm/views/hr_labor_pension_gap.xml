<odoo>


    <!-- Action to open the view -->
    <record model="ir.actions.act_window" id="action_hr_labor_pension_gap">
        <field name="name">勞退級距設定</field>
        <field name="res_model">hr.labor.pension.gap</field>
        <field name="view_mode">tree,form</field>
    </record>
    <!-- Tree view -->
    <record model="ir.ui.view" id="view_hr_labor_pension_gap_tree">
        <field name="name">hr.labor.pension.gap.tree</field>
        <field name="model">hr.labor.pension.gap</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="year"/>
                <field name="insurance_level"/>
                <field name="insurance_salary"/>
            </tree>
        </field>
    </record>

    <!-- Form view -->
    <record model="ir.ui.view" id="view_hr_labor_pension_gap_form">
        <field name="name">hr.labor.pension.gap.form</field>
        <field name="model">hr.labor.pension.gap</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="year"/>
                    <field name="insurance_level"/>
                    <field name="insurance_salary"/>
                </group>
            </form>
        </field>
    </record>

</odoo>