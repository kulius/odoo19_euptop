    <record id="hr_personal_calendar_action" model="ir.actions.act_window">
        <field name="name">個人行事曆</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.personal.calendar</field>
        <field name="view_mode">calendar,tree</field>
        <field name="domain">[('user_id', '=', uid)]</field>
        <field name="view_ids"
               eval="[(5, 0, 0), (0, 0, {'view_mode': 'calendar', 'view_id': ref('hr_personal_calendar_calendar_view')}),
                          (0, 0, {'view_mode': 'tree', 'view_id': ref('hr_personal_calendar_tree_view')}),]"/>
        <field name="context">{'edit': 0,'create': 0}</field>

    </record>

    <record id="hr_personal_calendar_manager_action" model="ir.actions.act_window">
        <field name="name">公司行事曆</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.personal.calendar</field>
        <field name="view_mode">calendar,tree</field>
        <field name="view_ids"
               eval="[(5, 0, 0),
                           (0, 0, {'view_mode': 'calendar', 'view_id': ref('hr_personal_calendar_calendar_view')}),
                          (0, 0, {'view_mode': 'tree', 'view_id': ref('hr_personal_calendar_tree_view')}),]"/>
        <!--                          (0, 0, {'view_mode': 'form', 'view_id': ref('hr_personal_calendar_form_view')})-->
        <field name="context">{'search_default_schedule_group': True, 'edit': 0,'create': 0}</field>
    </record>

