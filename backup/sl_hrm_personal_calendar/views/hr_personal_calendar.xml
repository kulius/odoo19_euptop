<odoo>
    <record id="hr_personal_calendar_tree_view" model="ir.ui.view">
        <field name="name">hr.personal.calendar.tree</field>
        <field name="model">hr.personal.calendar</field>
        <field name="arch" type="xml">
            <tree>
                <field name="employee_id"/>
                <field name="department_id"/>
                <field name="date_type"/>
                <!--                <field name="calendar_date"/>-->
                <field name="start_date"/>
                <!--                <field name="hour_from"/>-->
                <!--                <field name="min_from"/>-->
                <field name="end_date"/>
                <!--                <field name="hour_to"/>-->
                <!--                <field name="min_to"/>-->
            </tree>
        </field>
    </record>

    <record id="hr_personal_calendar_form_view" model="ir.ui.view">
        <field name="name">hr.personal.calendar.form</field>
        <field name="model">hr.personal.calendar</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="employee_id"/>
                            <field name="schedule_id" invisible="1"/>
                            <field name="calendar_date" invisible="1"/>
                        </group>
                        <group>
                            <field name="date_type"/>
                            <field name="time_type_id" invisible="1"/>

                        </group>
                    </group>
                    <group>
                        <group>
                            <group>
                                <field name="start_date"/>
                                <field name="end_date"/>
                                <!--                                <label for="hour_from"/>-->
                                <!--                                <div class="o_row o_row_readonly">-->
                                <!--                                    <field name="hour_from" widget="selection"/>-->
                                <!--                                    <label for="hour_from" string=" : "/>-->
                                <!--                                    <field name="min_from" widget="selection"/>-->
                                <!--                                </div>-->
                                <!--                                <label for="hour_to"/>-->
                                <!--                                <div class="o_row o_row_readonly">-->
                                <!--                                    <field name="hour_to" widget="selection"/>-->
                                <!--                                    <label for="hour_to" string=" : "/>-->
                                <!--                                    <field name="min_to" widget="selection"/>-->
                                <!--                                </div>-->
                            </group>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hr_personal_calendar_calendar_view" model="ir.ui.view">
        <field name="name">hr personal calendar calendar</field>
        <field name="model">hr.personal.calendar</field>
        <field name="priority" eval="2"/>
        <field name="arch" type="xml">
            <calendar string="Leads Generation" create="0" mode="month" date_start="start_date" date_stop="end_date"
                      color="date_type" hide_time="true" event_limit="5">
                <field name="employee_id" filters="1"/>
                <field name="date_type" filters="1"/>
                <field name="department_id" filters="1"/>
                <field name="start_date"/>
                <!--                <field name="hour_from"/>-->
                <!--                <field name="min_from"/>-->
                <field name="end_date"/>
                <!--                <field name="hour_to"/>-->
                <!--                <field name="min_to"/>-->
            </calendar>
        </field>
    </record>

