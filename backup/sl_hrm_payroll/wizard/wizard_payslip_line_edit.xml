<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_wizard_payslip_line_edit_form" model="ir.ui.view">
        <field name="name">wizard.payslip.line.edit.form</field>
        <field name="model">wizard.payslip.line.edit</field>
        <field name="arch" type="xml">
            <form string="變更薪資規則">
                <group>
                    <field name="payslip_line_id" readonly="1" />
                    <field name="amount"/>
                    <field name="change_reason"/>
                </group>
                <footer>
                    <button string="確定" type="object" name="save_changes" class="btn-primary"/>
                    <button string="取消" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>