<odoo>

  <record id="view_payslip_withholding_statement_wizard" model="ir.ui.view">
    <field name="name">payslip.withholding.statement.wizard.form</field>
    <field name="model">payslip.withholding.statement.wizard</field>
    <field name="arch" type="xml">
      <form string="請選擇時間區間">
        <group>
          <group>
            <field name="start_date" />
          </group>
          <group>
            <field name="end_date" />
          </group>
        </group>
        <group>
          <group>
            <field name="city_agency" />
            <field name="serial_number" />
            <field name="reporting_unit_tax_id" />
            <field name="income_note" />
            <field name="income_format" />
            <field name="recipient_tax_id" />
            <field name="id_type" />
            <field name="tax_credit_ratio" />
            <field name="allocation_count" />
            <field name="ex_dividend_date" />
            <field name="software_note" />
            <field name="error_note" />
            <field name="payment_year" />
          </group>
          <group>
            <field name="recipient_name" readonly="1"/>
            <field name="recipient_address" readonly="1"/>
            <field name="income_period" />
            <field name="other_cash_dividend" />
            <field name="capital_reserve_cash_dividend" />
            <field name="stock_dividend" />
            <field name="stock_dividend_shares" />
            <field name="tax_credit_note" />
            <field name="statement_issue_method" />
            <field name="is_over_183_days" />
            <field name="residence_country_code" />
            <field name="tax_treaty_code" />
            <field name="liquidation_date" />
            <field name="tax_identification_number" />
          </group>
        </group>
        <button name="set_pre_year" string="去年度" type="object" class="btn-primary" />
        <span> </span>
        <button name="set_this_year" string="本年度" type="object" class="btn-primary" />
        <span> </span>
        <button name="set_this_month" string="本月" type="object" class="btn-primary" />
        <footer>
          <button name="view_withholding_statement" string="檢視報表" type="object" class="btn-primary" />
          <button string="取消" special="cancel" class="btn-secondary" />
        </footer>
      </form>
    </field>
  </record>

  <record id="action_payslip_withholding_statement_wizard" model="ir.actions.act_window">
    <field name="name">所得申報報表查詢</field>
    <field name="res_model">payslip.withholding.statement.wizard</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
    <field name="view_id" ref="view_payslip_withholding_statement_wizard" />
    <field name="binding_model_id" ref="model_hr_payslip" />
  </record>

  <record id="action_payslip_withholding_statement_report" model="ir.actions.report">
    <field name="name">所得申報報表</field>
    <field name="model">payslip.withholding.statement.wizard</field>
    <field name="report_type">qweb-html</field>
    <field name="report_name">sl_hrm_payroll.payslip_withholding_statement_template</field>
    <field name="report_file">sl_hrm_payroll.payslip_withholding_statement_template</field>
    <field name="print_report_name">'所得申報報表 - %s' % (object.sheet_id.name or '')</field>
  </record>

</odoo>