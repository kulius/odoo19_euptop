<odoo>
    <data noupdate="1">
        <record id="starrylord_holiday_sick" model="starrylord.holiday.type">
            <field name="name">病假</field>
            <field name="request_unit">hour</field>
            <field name="salary_calculation">half_pay</field>
            <field name="is_distribute">True</field>
        </record>

        <record id="starrylord_holiday_own" model="starrylord.holiday.type">
            <field name="name">事假</field>
            <field name="request_unit">half</field>
            <field name="salary_calculation">no_pay</field>
            <field name="is_distribute">True</field>
        </record>

        <record id="starrylord_holiday_special" model="starrylord.holiday.type">
            <field name="name">特休</field>
            <field name="request_unit">hour</field>
            <field name="salary_calculation">full_pay</field>
            <field name="is_distribute">True</field>
        </record>

        <record id="starrylord_holiday_no_pay" model="starrylord.holiday.type">
            <field name="name">無薪假</field>
            <field name="request_unit">day</field>
            <field name="salary_calculation">no_pay</field>
            <field name="is_distribute">False</field>
        </record>

        <record id="starrylord_holiday_official" model="starrylord.holiday.type">
            <field name="name">公假</field>
            <field name="request_unit">hour</field>
            <field name="salary_calculation">full_pay</field>
            <field name="is_distribute">False</field>
        </record>

        <record id="starrylord_holiday_comp_time" model="starrylord.holiday.type">
            <field name="name">補休</field>
            <field name="request_unit">half</field>
            <field name="salary_calculation">full_pay</field>
            <field name="is_distribute">True</field>
        </record>

        <record id="starrylord_holiday_menstrual" model="starrylord.holiday.type">
            <field name="name">生理假</field>
            <field name="request_unit">hour</field>
            <field name="salary_calculation">half_pay</field>
            <field name="is_distribute">True</field>
        </record>

        <record id="starrylord_holiday_full_pay_maternity" model="starrylord.holiday.type">
            <field name="name">全薪產假</field>
            <field name="request_unit">day</field>
            <field name="salary_calculation">full_pay</field>
            <field name="is_distribute">True</field>
        </record>

        <record id="starrylord_holiday_half_pay_maternity" model="starrylord.holiday.type">
            <field name="name">半薪產假</field>
            <field name="request_unit">day</field>
            <field name="salary_calculation">half_pay</field>
            <field name="is_distribute">True</field>
        </record>

        <record id="starrylord_holiday_apply_number" model="ir.sequence">
			<field name="name">starrylord holiday apply number</field>
			<field name="code">starrylord.holiday.apply.number</field>
			<field name="prefix">%(year)s%(month)s%(day)s</field>
			<field name="padding">3</field>
			<field name="company_id" eval="False"/>
		</record>
    </data>
</odoo>