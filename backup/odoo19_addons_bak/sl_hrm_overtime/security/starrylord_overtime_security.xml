<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.module.category" id="module_category_starrylord_overtime">
        <field name="name">SL-加班</field>
        <field name="description">Helps you manage the overtimes.</field>
        <field name="sequence">14</field>
    </record>

    <record id="group_starrylord_overtime" model="res.groups">
        <field name="name">加班單申請人員</field>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="comment">一般加班申請人員</field>
    </record>

    <record id="group_starrylord_overtime_director" model="res.groups">
        <field name="name">加班單簽核人員</field>
        <field name="implied_ids" eval="[(4, ref('group_starrylord_overtime'))]"/>
        <field name="comment">加班單簽核人員</field>
    </record>

    <record id="group_starrylord_overtime_manager" model="res.groups">
        <field name="name">加班單管理人員</field>
        <field name="implied_ids" eval="[(4, ref('group_starrylord_overtime_director'))]"/>
        <field name="comment">加班單管理人員</field>
    </record>

    <record id="group_starrylord_overtime_developer" model="res.groups">
        <field name="name">加班參數設定</field>
        <field name="implied_ids" eval="[(4, ref('group_starrylord_overtime_manager'))]"/>
        <field name="comment">相關參數設定</field>
    </record>

</odoo>
