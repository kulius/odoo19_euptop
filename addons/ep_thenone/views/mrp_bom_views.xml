<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mrp_bom_form_view_ep_thenone" model="ir.ui.view">
        <field name="name">mrp.bom.form.ep.thenone</field>
        <field name="model">mrp.bom</field>
        <field name="inherit_id" ref="mrp.mrp_bom_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='bom_line_ids']//list//field[@name='product_id']" position="after">
                <field name="old_product_code"/>
                <field name="supplier_code"/>
            </xpath>
        </field>
    </record>
</odoo>
